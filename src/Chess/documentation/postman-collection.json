{
  "info": {
    "name": "Chess Module - YellowMeter OS",
    "description": "Colección de endpoints para el módulo de ajedrez P2P con apuestas",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "chess-yellowmeter-2026",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Health & Status",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/chess/health",
              "host": ["{{base_url}}"],
              "path": ["chess", "health"]
            },
            "description": "Verificar estado del servicio de ajedrez"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Game Management",
      "item": [
        {
          "name": "Create Game",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"walletAddress\": \"{{player1_address}}\",\n  \"wagerAmount\": 10,\n  \"signature\": \"{{signature}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/chess/start",
              "host": ["{{base_url}}"],
              "path": ["chess", "start"]
            },
            "description": "Crear una nueva partida de ajedrez"
          },
          "response": []
        },
        {
          "name": "Get Game Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/chess/game/{{game_id}}",
              "host": ["{{base_url}}"],
              "path": ["chess", "game", "{{game_id}}"]
            },
            "description": "Obtener información completa de una partida"
          },
          "response": []
        },
        {
          "name": "Get Player Games",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/chess/player-games?address={{player1_address}}",
              "host": ["{{base_url}}"],
              "path": ["chess", "player-games"],
              "query": [
                {
                  "key": "address",
                  "value": "{{player1_address}}"
                }
              ]
            },
            "description": "Listar todas las partidas de un jugador"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Gameplay",
      "item": [
        {
          "name": "Make Move",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"gameId\": \"{{game_id}}\",\n  \"walletAddress\": \"{{player1_address}}\",\n  \"move\": \"e2e4\",\n  \"nonce\": 1,\n  \"signature\": \"{{signature}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/chess/move",
              "host": ["{{base_url}}"],
              "path": ["chess", "move"]
            },
            "description": "Realizar un movimiento en la partida"
          },
          "response": []
        },
        {
          "name": "Claim Victory",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"gameId\": \"{{game_id}}\",\n  \"walletAddress\": \"{{player1_address}}\",\n  \"finalStateSignature\": \"{{signature}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/chess/claim-victory",
              "host": ["{{base_url}}"],
              "path": ["chess", "claim-victory"]
            },
            "description": "Reclamar victoria tras checkmate"
          },
          "response": []
        }
      ]
    },
    {
